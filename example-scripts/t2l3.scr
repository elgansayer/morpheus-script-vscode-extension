			{
				level.friendly[local.i] exec global/enable_ai.scr
				level.friendly[local.i] rendereffects "-dontdraw"
				level.friendly[local.i] turnto $s5
				level.friendly[local.i] exec global/crouch.scr	
			}
		}		
	}

