BeBazookaGuy:
//------------------------------------------------------------------------------------------------
 
	 self exec global/disable_ai.scr
	 self waittill movedone
	 
	 wait 0.5
	 self exec global/crouch.scr
	 wait 1
	 while ( isAlive self )

		 {
		  self exec global/aimat.scr $player
		  wait 1
		  self exec global/shoot.scr
		  wait 3.5
		 }
 
 end

