placeexplosive1:

//	dprintln "~~~~~~~~~~~~~~~~~~~~~~~~~~~~ explosive charge 1 placed"
	level.charge1 = 1
	level.chargecount++
	thread explosiveplaced

end


placeexplosive2:

//	dprintln "~~~~~~~~~~~~~~~~~~~~~~~~~~~~ explosive charge 2 placed"
