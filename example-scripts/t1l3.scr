//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
//
//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
groupstayonpath local.group local.dumbdelay:

	if ( local.group != NIL )
	{
		local.count = local.group.size

		if ( local.count > 0 )
		{
			for ( local.i = 1; local.i <= local.count; local.i++ )
			{
				local.group[local.i] thread stayonpath local.dumbdelay
			}
		}
	}

end


